<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.InitController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Enter IP and Port to Connect:" />
    <TextField fx:id="ipField" promptText="IP Address (e.g., 127.0.0.1)" />
    <TextField fx:id="portField" promptText="Port (e.g., 3000)" />
    <Button text="Connect" onAction="#connect" />

</VBox>
